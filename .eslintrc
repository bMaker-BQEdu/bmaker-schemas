{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-console": "off",
    "semi": [
      "error",
      "never"
    ],
    "prefer-const": "error",
    "no-const-assign": "error",
    "no-var": "error",
    "eol-last": [
      "error",
      "always"
    ]
  }
}
